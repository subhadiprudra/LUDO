<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/rev"
    android:gravity="center_horizontal"
    android:background="@color/back">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@raw/board"
        android:id="@+id/board"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05"
                android:textSize="20dp"
                android:id="@+id/minutes"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Minutes"
                android:textSize="10dp"
                android:textColor="@android:color/white"/>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05"
                android:textSize="20dp"
                android:id="@+id/seconds"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Seconds"
                android:textSize="10dp"
                android:textColor="@android:color/white"/>



        </LinearLayout>




    </LinearLayout>





    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150px"
        android:id="@+id/r1"
        android:background="@android:color/white">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/p_back"
            android:id="@+id/p1"
            />


        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="20px">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/ic_baseline_person_24_red"
                android:id="@+id/dp1"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dp1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/back"
                    android:id="@+id/n1"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score : 0"
                    android:textColor="@color/back"
                    android:id="@+id/score1"
                    android:textSize="12dp"/>

            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150px"
        android:id="@+id/r2"
        android:background="@android:color/white">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/p_back"
            android:id="@+id/p2"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="20px">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_baseline_person_24_green"
            android:id="@+id/dp2"
            android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dp2"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/back"
                    android:id="@+id/n2"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score : 0"
                    android:textColor="@color/back"
                    android:id="@+id/score2"
                    android:textSize="12dp"/>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150px"
        android:id="@+id/r3"
        android:background="@android:color/white">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/p_back"
            android:id="@+id/p3"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="150px"
            android:padding="20px">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_baseline_person_24_yellow"
            android:id="@+id/dp3"
            android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dp3"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/back"
                android:id="@+id/n3"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score : 0"
                android:textColor="@color/back"
                android:id="@+id/score3"
                android:textSize="12dp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150px"
        android:id="@+id/r4"
        android:background="@android:color/white">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/p_back"
            android:id="@+id/p4"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="20px">
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_baseline_person_24_blue"
            android:id="@+id/dp4"
            android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dp4"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/back"
                    android:id="@+id/n4"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score : 0"
                    android:textColor="@color/back"
                    android:id="@+id/score4"
                    android:textSize="12dp"/>



            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>





    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />





</RelativeLayout>